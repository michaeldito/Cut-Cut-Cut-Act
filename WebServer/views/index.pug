extends layout

block content
  // Header
  #header
    img#title-image(src='images/dollar-sign.png')
    h1 The Cut-Cut-Cut-Act
    p Check out how much you benefit, or don't benefit, with the new plan.
  // Main
  #main
    header.major.container(class='75%')
      //form(action='/js/clientController.js', method='POST')
      div
        label Income
        input(id='income', type='text', style='text-align:center' name='income')
        label Status
        input(id='single', type='radio', name='status', value='single')
        |  Single
        input(id='married', type='radio', name='status', value='married')
        |  Married 
        br
        label State And Local Tax Deductions
        input(id='stateAndLocalTaxDeduction', type='text', style='text-align:center' name='stateAndLocalTaxDeduction')
        label Itemized Deductions
        input(id='deductions', type='text', style='text-align:center' name='deductions')
        label Tax Credits
        input(id='credits', type='text', style='text-align:center' name='credits')
        label Exemptions (1 for you, one for each child)
        input(id='personalExemptions', type='text', style='text-align:center' name='personalExemptions')
        label â€‹
        input.myForm(id='submit', type='submit', value='submit')
      br
      br

      div(style='visibility:hidden', id='results')
        h2 Taxes
        p(id='tax_results')
  // Footer
  #footer
    .container(class='75%')
      ul.icons
        li
          a.icon.fa-twitter(href='#')
            span.label Twitter
        li
          a.icon.fa-facebook(href='#')
            span.label Facebook
        li
          a.icon.fa-instagram(href='#')
            span.label Instagram
  // Scripts
  //script(src='/js/jquery.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
  script(src='/js/skel.min.js')
  script(src='/js/util.js')
  script(src='/js/clientController.js')
  //if lte IE 8
    script(src='/js/ie/respond.min.js')
  script(src='/js/main.js')

